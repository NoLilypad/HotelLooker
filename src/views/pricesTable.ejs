<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Tableau des prix Booking.com</title>
    <link rel="stylesheet" href="/style.css">
    <style>
      .spinner-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
        pointer-events: none;
        background: rgba(255,255,255,0.15);
      }
      .spinner {
        border: 4px solid #e0f2e9;
        border-top: 4px solid #43a047;
        border-radius: 50%;
        width: 48px;
        height: 48px;
        animation: spin 1s linear infinite;
      }
      @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }
    </style>
</head>
<body>
    <div id="spinner-overlay" class="spinner-overlay" style="display:none;">
      <div class="spinner" id="spinner"></div>
      <div class="spinner-check" id="spinner-check" style="display:none;">&#10003;</div>
    </div>
    <style>
      .spinner-check {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        font-size: 2em;
        color: #43a047;
        background: #fff;
        border-radius: 50%;
        box-shadow: 0 0 4px #ccc;
        position: absolute;
        top: 0;
        left: 0;
      }
    </style>
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="error"><%= error %></div>
    <% } %>
    <% 
      // Get Monday and Sunday dates for the displayed week
      const monday = days[0];
      const sunday = days[6];
      function formatDateSlash(dateStr) {
        const d = new Date(dateStr);
        const dd = String(d.getDate()).padStart(2, '0');
        const mm = String(d.getMonth() + 1).padStart(2, '0');
        const yyyy = d.getFullYear();
        return `${dd}/${mm}/${yyyy}`;
      }
    %>
    <div style="display:flex; align-items:center; justify-content:space-between; margin-bottom:1em;">
      <form method="GET" action="/prices" style="margin:0;">
        <input type="hidden" name="start_date" value="<%= (() => { let d=new Date(monday.date); d.setDate(d.getDate()-7); return d.toISOString().slice(0,10); })() %>">
        <input type="hidden" name="adults" value="<%= nbAdults %>">
        <button type="submit" title="Semaine précédente" style="font-size:2em; background:none; border:none; cursor:pointer; color:#1976d2;">&#8592;</button>
      </form>
      <h1 style="margin:0; font-size:1.5em; text-align:center; flex:1;">
        Prix Booking.com du <%= formatDateSlash(monday.date) %> au <%= formatDateSlash(sunday.date) %>
      </h1>
      <form method="GET" action="/prices" style="margin:0;">
        <input type="hidden" name="start_date" value="<%= (() => { let d=new Date(monday.date); d.setDate(d.getDate()+7); return d.toISOString().slice(0,10); })() %>">
        <input type="hidden" name="adults" value="<%= nbAdults %>">
        <button type="submit" title="Semaine suivante" style="font-size:2em; background:none; border:none; cursor:pointer; color:#1976d2;">&#8594;</button>
      </form>
    </div>
    <h2>Nombre d'adultes : <%= nbAdults %></h2>
    <% 
      // Calculer le prix minimum pour chaque colonne (jour)
      const minPrices = days.map(function(day, colIdx) {
        let min = null;
        prices.forEach(function(row) {
          const p = row.prices[colIdx];
          if (p !== null && (min === null || p < min)) min = p;
        });
        return min;
      });
    %>
    <table>
        <thead>
            <tr>
                <th>Hôtel</th>
                <% days.forEach(function(day) { 
                    const dateObj = new Date(day.date);
                    const dd = String(dateObj.getDate()).padStart(2, '0');
                    const mm = String(dateObj.getMonth() + 1).padStart(2, '0');
                    const yyyy = dateObj.getFullYear();
                    const formattedDate = `${dd}/${mm}/${yyyy}`;
                    const weekdayFr = dateObj.toLocaleDateString('fr-FR', { weekday: 'long' });
                %>
                    <th>
                        <%= weekdayFr.charAt(0).toUpperCase() + weekdayFr.slice(1) %><br>
                        <span style="font-size:0.9em"><%= formattedDate %></span>
                    </th>
                <% }); %>
            </tr>
        </thead>
        <tbody>
            <% prices.forEach(function(row) { %>
                <tr>
                    <td><%= row.name %></td>
                    <% row.prices.forEach(function(price, colIdx) { %>
                        <td>
                            <% if (price === null) { %>
                                <span class="notfound">-</span>
                            <% } else if (price === minPrices[colIdx]) { %>
                                <b><%= price %> €</b>
                            <% } else { %>
                                <%= price %> €
                            <% } %>
                        </td>
                    <% }); %>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/prices" class="back">&#8592; New search</a>
    <script>
      // Spinner logique : affichage lors de la soumission, check à la fin du chargement
      document.addEventListener('DOMContentLoaded', function() {
        var spinnerOverlay = document.getElementById('spinner-overlay');
        var spinner = document.getElementById('spinner');
        var spinnerCheck = document.getElementById('spinner-check');
        function showSpinner() {
          spinnerOverlay.style.display = '';
          spinner.style.display = '';
          spinnerCheck.style.display = 'none';
        }
        function showCheck() {
          spinner.style.display = 'none';
          spinnerCheck.style.display = '';
          setTimeout(function() {
            spinnerOverlay.style.display = 'none';
          }, 900);
        }
        // Affiche le spinner à la soumission de n'importe quel formulaire
        document.querySelectorAll('form').forEach(function(form) {
          form.addEventListener('submit', function() {
            showSpinner();
          });
        });
        // Affiche le check à la fin du chargement de la page (si spinner visible)
        window.addEventListener('pageshow', function() {
          if (spinnerOverlay.style.display !== 'none') {
            showCheck();
          }
        });
        window.addEventListener('load', function() {
          if (spinnerOverlay.style.display !== 'none') {
            showCheck();
          }
        });
      });
    </script>
</body>
</html>
