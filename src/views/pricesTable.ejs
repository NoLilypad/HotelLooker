<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Tableau des prix Booking.com</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <% 
      // Récupère la date du lundi et du dimanche de la semaine affichée
      const lundi = days[0];
      const dimanche = days[6];
      function formatDateFr(dateStr) {
        const d = new Date(dateStr);
        return d.toLocaleDateString('fr-FR', { day: '2-digit', month: '2-digit', year: 'numeric' });
      }
    %>
    <h1 style="text-align:center;">
      Prix Booking.com du <%= formatDateFr(lundi.date) %> au <%= formatDateFr(dimanche.date) %>
    </h1>
    <h2>Nombre d'adultes : <%= nbAdults %></h2>
    <table>
        <thead>
            <tr>
                <th>Hôtel</th>
                <% days.forEach(function(day) { 
                    // Format date as dd-mm-aaaa
                    const dateObj = new Date(day.date);
                    const dd = String(dateObj.getDate()).padStart(2, '0');
                    const mm = String(dateObj.getMonth() + 1).padStart(2, '0');
                    const yyyy = dateObj.getFullYear();
                    const formattedDate = `${dd}-${mm}-${yyyy}`;
                %>
                    <th>
                        <%= day.label.charAt(0).toUpperCase() + day.label.slice(1) %><br>
                        <span style="font-size:0.9em"><%= formattedDate %></span>
                    </th>
                <% }); %>
            </tr>
        </thead>
        <tbody>
            <% prices.forEach(function(row) { %>
                <tr>
                    <td><%= row.name %></td>
                    <% row.prices.forEach(function(price) { %>
                        <td>
                            <% if (price === null) { %>
                                <span class="notfound">-</span>
                            <% } else { %>
                                <%= price %> €
                            <% } %>
                        </td>
                    <% }); %>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/prices" class="back">&#8592; Nouvelle recherche</a>
</body>
</html>
