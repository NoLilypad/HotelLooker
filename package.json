{
  "name": "hotellooker",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "bin": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon",
    "build:win": "pkg . --targets node18-win-x64 --output windist/HotelLooker-win.exe",
    "build:linux": "pkg . --targets node18-linux-x64 --output dist/HotelLooker-linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NoLilypad/HotelLooker.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NoLilypad/HotelLooker/issues"
  },
  "homepage": "https://github.com/NoLilypad/HotelLooker#readme",
  "dependencies": {
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "dotenv": "16.4.5",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "data/hotels.json",
      "src/public/**/*",
      "src/views/**/*",
      "node_modules/axios/dist/node/axios.cjs"
    ],
    "scripts": [
      "src/server.js"
    ]
  }
}
